from simple_salesforce import Salesforce
from faker import Faker

# Initialize Faker
fake = Faker()

# Salesforce credentials
username = 'your_username'
password = 'your_password'
client_id = 'your_client_id'
client_secret = 'your_client_secret'

# Initialize Salesforce connection with OAuth 2.0 authentication
sf = Salesforce(username=username, password=password, client_id=client_id, client_secret=client_secret)

# Define the number of records you want to insert
num_records = 100

# Insert fake data into Salesforce table
for _ in range(num_records):
    sf.Account.create({
        'Name': fake.company(),
        'Industry': fake.random_element(elements=('Technology', 'Healthcare', 'Finance', 'Retail')),
        'Phone': fake.phone_number()
        # Add other fields as needed
    })

print("Fake data insertion completed.")
