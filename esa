    for column, fake_data_type in column_mappings.items():
        column_index = int(column) - 1
        if fake_data_type in fake_data_functions:
            if callable(fake_data_functions[fake_data_type]):
                # Check if the value in the dictionary is a function and call it accordingly
                dataframe.iloc[:, column_index] = dataframe.iloc[:, column_index].apply(
                    lambda x: fake_data_functions[fake_data_type]() if fake_data_type != 'singlechar' else singleint()
                )
            else:
                # If the value is not a function (possibly a static value or string), assign it directly
                dataframe.iloc[:, column_index] = fake_data_functions[fake_data_type]
        else:
            logger.warning(f"Invalid fake data type for column {column}!")

    return dataframe
