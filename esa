from faker import Faker
from simple_salesforce import Salesforce
import json

# Initialize Faker library
fake = Faker()

# Generate fake data for a Salesforce Contact (as an example)
def generate_fake_data(num_records):
    data = []
    for _ in range(num_records):
        record = {
            'LastName': fake.last_name(),
            'Email': fake.email(),
            'Phone': fake.phone_number(),
        }
        data.append(record)
    return data

# Salesforce login credentials
sf_username = 'your_username'
sf_password = 'your_password'
sf_security_token = 'your_security_token'

# Initialize Salesforce connection
sf = Salesforce(username=sf_username, password=sf_password, security_token=sf_security_token)

# Generate 10 fake records
fake_data = generate_fake_data(10)

# Insert records into Salesforce
for record in fake_data:
    try:
        result = sf.Contact.create(record)
        print(f"Record inserted. ID: {result['id']}")
    except Exception as e:
        print(f"Error inserting record: {e}")
